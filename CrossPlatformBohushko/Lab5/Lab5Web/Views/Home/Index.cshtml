@{
    ViewBag.Title = "Labs";
}

<div class="row">
    <div class="col-md-12" align="center">
        <h1 style="margin-top:100px">Lab5. Log In to execute labs 1-3</h1>
        
        <style>
            body {
                text-align: center;
            }

            table {
                width: 70%;
                margin: 20px auto;
                border-collapse: collapse;
            }

            th, td {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            th {
                background-color: #f2f2f2;
            }

            tr:nth-child(even) {
                background-color: #f9f9f9;
            }
        </style>


        @if (User.Identity.IsAuthenticated)
        {

            <h3 style="color:green;margin-top:50px">Succesfy logged in</h3>

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Path</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Lab 1 </td>
                        <td><a href="/Labs/Lab1">Go to</a> </td>
                        <td>Task with Numbers</td>


                    </tr>
                    <tr>
                        <td>Lab 2</td>
                        <td><a href="/Labs/Lab2">Go to</a> </td>
                        <td>Task with letters</td>
                       
                    </tr>
                    <tr>
                        <td>Lab 3</td>
                        <td><a href="/Labs/Lab3">Go to</a> </td>
                        <td>Written Task стін в ньому</td>
                       
                    </tr>
                </tbody>
            </table>

        }
        else
        {
            <h3 style="color:blue;margin-top:50px">Welcome! Sign in to continue</h3>
        }

    </div>
</div>